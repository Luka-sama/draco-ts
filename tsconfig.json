{
  "extends": "@tsconfig/node18/tsconfig.json",
  
  "compilerOptions": {
    "rootDir": "src/",
    "outDir": "dist/",
    "declaration": true,
    "sourceMap": true,

    "lib": ["es2021"],
    "target": "es2021",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "typedocOptions": {
    "entryPoints": ["src/"],
    "entryPointStrategy": "expand",
    "exclude": "src/jest-setup.ts",
    "out": "docs",
    "sort": "source-order",
    "theme": "hierarchy"
  }
}
